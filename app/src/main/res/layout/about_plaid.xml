<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/libs_list_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--
            <xebia.ismail.plnpjb.widget.CutoutTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/about_header_height"
                android:text="PLN PJB"
                app:foregroundColor="#FFF"
                app:font="Karla-Bold" /> -->

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#FFF"/>

            <xebia.ismail.plnpjb.widget.CutoutTextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="DESCRIPTION"
                app:foregroundColor="#FFF"
                app:font="Karla-Bold" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp"
                android:paddingTop="10dp"
                android:textSize="13.5dp"
                android:textColor="#434343"
                android:paddingBottom="30dp"
                android:text="@string/description" />

            <xebia.ismail.plnpjb.widget.CutoutTextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="DEVELOPER"
                app:foregroundColor="#FFF"
                app:font="Karla-Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:background="#f4f4f4"
                android:paddingRight="32dp"
                android:clickable="true"
                android:stateListAnimator="@animator/raise"
                android:foreground="?android:selectableItemBackground"
                android:paddingBottom="16dp"
                android:paddingTop="32dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/herwin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herwin Januardi S.T"
                        android:textColor="#4d4d4d"
                        android:textSize="13.5dp"
                        android:textStyle="bold" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingExtra="1.5dp"
                        android:text="Electrical Engineer in PLN"
                        android:textColor="#999"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="16dp"
                android:clickable="true"
                android:background="#f4f4f4"
                android:paddingBottom="32dp"
                android:stateListAnimator="@animator/raise"
                android:foreground="?android:selectableItemBackground"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/helmi"
                    app:border_color="#999"
                    app:border_width="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Helmi Ismail S.Kom"
                        android:textColor="#4d4d4d"
                        android:textSize="13.5dp"
                        android:textStyle="bold" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingExtra="1.5dp"
                        android:text="Android UI/UX Developer"
                        android:textColor="#999"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>