<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradisent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!--
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:src="@android:drawable/ic_dialog_email"
            app:layout_anchor="@+id/ll"
            app:layout_anchorGravity="top|end" />
            -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="32dp"
                        android:orientation="horizontal">


                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/abouts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/border"
                            android:orientation="horizontal">

                            <com.pixplicity.fontview.FontAppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:textColor="#bfffffff"
                                android:textSize="12.5dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:padding="4dp"
                            android:src="@drawable/account_remove"
                            android:tint="#FFF" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:stateListAnimator="@animator/raise"
                        app:cardBackgroundColor="#FFF"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/blmod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:stateListAnimator="@animator/raise"
                                android:foreground="?android:selectableItemBackground"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:padding="4dp"
                                    android:src="@drawable/bluetoothmod" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:orientation="vertical">

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bluetooth Module"
                                        android:textColor="#000" />

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:lineSpacingExtra="1.5dp"
                                        android:lines="2"
                                        android:text="@string/bluetoothstr"
                                        android:textColor="#737373"
                                        android:textSize="11.5dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="80dp"
                                android:background="#efefef"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:stateListAnimator="@animator/raise"
                                android:foreground="?android:selectableItemBackground"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:padding="4dp"
                                    android:src="@drawable/wifimod" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:orientation="vertical">

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Wireless Module"
                                        android:textColor="#000" />

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:lineSpacingExtra="1.5dp"
                                        android:lines="2"
                                        android:text="@string/wifistr"
                                        android:textColor="#737373"
                                        android:textSize="11.5dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="80dp"
                                android:background="#efefef"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:stateListAnimator="@animator/raise"
                                android:foreground="?android:selectableItemBackground"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:padding="4dp"
                                    android:src="@drawable/smsmodule" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:orientation="vertical">

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SMS Module"
                                        android:textColor="#000" />

                                    <com.pixplicity.fontview.FontAppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:lineSpacingExtra="1.5dp"
                                        android:lines="2"
                                        android:text="@string/smsstr"
                                        android:textColor="#737373"
                                        android:textSize="11.5dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/spacing_large"
            android:background="@drawable/fab"
            android:elevation="@dimen/z_fab"
            android:src="@drawable/format_list_checks"
            android:stateListAnimator="@animator/raise"
            android:tint="#001335"
            android:visibility="visible" />

        <View
            android:id="@+id/results_scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b3ffffff"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/confirm_save_container"
            android:layout_width="430dp"
            android:layout_height="430dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/padding_normal"
            android:layout_marginEnd="@dimen/padding_normal"
            android:background="@drawable/fab"
            android:elevation="10dp"
            android:theme="@style/ExpandedFabTheme"
            android:translationX="170dp"
            android:translationY="170dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="252dp"
                android:layout_gravity="start|top"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/save_dribbble"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_in"
                    android:drawablePadding="16dp"
                    android:paddingBottom="16dp"
                    android:text="Share" />

                <Button
                    android:id="@+id/save_designer_news"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_ex"
                    android:drawablePadding="16dp"
                    android:paddingBottom="@dimen/padding_normal"
                    android:text="Feedback" />

                <Button
                    android:id="@+id/save_confirmed"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/avd_close_to_down"
                    android:drawablePadding="@dimen/padding_normal"
                    android:paddingRight="12dp"
                    android:text="EXIT" />

            </LinearLayout>

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>